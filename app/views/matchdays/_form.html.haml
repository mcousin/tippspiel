= form_for(@matchday) do |f|
  - if @matchday.errors.any?
    #error_explanation
      %h2
        = pluralize(@matchday.errors.count, "error")
        prohibited this matchday from being saved:
      %ul
        - @matchday.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :description
    %br/
    = f.text_field :description
  .actions
    = f.submit
