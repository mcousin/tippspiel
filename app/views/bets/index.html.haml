.test

  - i = 0
  - matchCount = @matchdays.length
  - @matchdays.each do |matchday|
    - if (matchday == @matchday)
      .btn-group
        - if (i > 0)
          .btn
            = link_to @matchdays[0].description, matchday_bets_path(@matchdays[0])
            - if (i > 2)
              = "... "
        - if (i > 1)
          .btn
            = link_to @matchdays[i-1].description, matchday_bets_path(@matchdays[i-1])
        .btn
          = link_to @matchdays[i].description, matchday_bets_path(@matchdays[i]), :id => "matchShown"
        - if (i < matchCount - 2)
          .btn
            = link_to @matchdays[i+1].description, matchday_bets_path(@matchdays[i+1])

        - if (i < matchCount - 3)
          .btn
            = link_to @matchdays[i+2].description, matchday_bets_path(@matchdays[i+2])
        - if (i < matchCount - 2)
          .btn
            = "..."
            = link_to @matchdays[matchCount - 1].description, matchday_bets_path(@matchdays[matchCount - 1])
        - if (i < matchCount - 1 && i >= matchCount - 2)
          .btn
            = link_to @matchdays[matchCount - 1].description, matchday_bets_path(@matchdays[matchCount - 1])
    - i = i + 1


- if @matchday
  .wspace
  %h1= @matchday.description
  .wspace
  %h2 Your bets
  .wspace
  = render :partial => "shared/matchday_bets_form"
  .wspace
  .wspace
  %h2 Bet overview
  .wspace
  = render :partial => "shared/matchday_bets_overview"
