<h1>Listing bets</h1>

<table>
  <tr>
    <th>Match</th>
    <th>User</th>
    <th>Bet</th>
    <th>Points</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @bets.each do |bet| %>
  <tr>
    <td><%= bet.match %></td>
    <td><%= bet.user.name %></td>
    <td><%= bet.scores_string %></td>
    <td><%= bet.points %></td>
    <td><%= link_to 'Show', bet %></td>
    <td><%= link_to 'Edit', edit_bet_path(bet) %></td>
    <td><%= link_to 'Destroy', bet, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

