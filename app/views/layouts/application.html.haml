!!!
%html
  %head
    %title Tippspiel
    = google_webfonts_link_tag :"Oleo Script" => [400], :"Lobster Two" =>[700]
    = stylesheet_link_tag    "application", :media => "all"
    = javascript_include_tag "application"
    = csrf_meta_tags
  %body
    #header 
      - if current_user
        .navbar
          .navbar-inner
            %a.brand{:href => home_path} Home
            %ul.nav
              %li= link_to 'Current Matchday', matchday_bets_path(Matchday.current)
              %li= link_to 'Ranking', users_path
              - if current_user.admin?
                %li= link_to 'Matchdays', matchdays_path
                %li= link_to 'Matches', matches_path            
            %ul.nav.pull-right  
              %li.dropdown
                %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"} 
                  %i.icon-user.icon-white
                  = current_user.name
                  %b.caret
                %ul.dropdown-menu
                  %li= link_to 'Your Profile', profile_path
                  %li= link_to 'Logout', logout_path

    .container
      .row#content
        .span12
          - flash.each do |key, value|
            = content_tag(:div, value, class: "alert alert-#{key}")
          = yield
      .row#footer
        .span12
