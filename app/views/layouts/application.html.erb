<!DOCTYPE html>
<html>
<head>
  <title>Tippspiel</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
	<div class="row">
		<div class="span6">LOGO
		</div>
		<div class="span6 rightaligned">
        <% if current_user %>
          <%= "Logged in as #{current_user.name}" %>
          <b> <%= link_to 'Logout', logout_path %> </b> <br />
        <% end %>
				<%= link_to 'Matches', matches_path %> |
				<%= link_to 'Matchdays', matchdays_path %> |
				<%= link_to 'Bets', bets_path %> |							
				<%= link_to 'Users', users_path %>
		</div>
	</div>	
	<div class="row">
		<div class="span12">
				<%= yield %>
		</div
	</div>
</body>
</html>
